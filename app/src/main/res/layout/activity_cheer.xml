<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.muroigundan.task_app.CheerActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:context="com.muroigundan.task_app.MainActivity"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">

    <Button
        android:id="@+id/button100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="cheer_btn"
        android:text="応援メッセ"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="detail_btn"
        android:text="タスク詳細"
        tools:layout_editor_absoluteX="169dp"
        tools:layout_editor_absoluteY="0dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="278dp"
        android:layout_height="303dp"
        app:srcCompat="@drawable/todo"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="48dp" />

    <Button
        android:id="@+id/trans1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="trans1_tap"
        android:text="DOING"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="369dp" />

    <Button
        android:id="@+id/trans2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="trans2_tap"
        android:text="Button"
        android:visibility="gone"
        tools:layout_editor_absoluteX="203dp"
        tools:layout_editor_absoluteY="369dp" />

</android.support.constraint.ConstraintLayout>
